<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rrkr2016.javaclassname.ResourcePage">

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:hint="Year"
        android:layout_alignTop="@+id/etsdid"
        android:layout_toEndOf="@+id/etsdid"
        android:layout_marginStart="26dp"
        android:id="@+id/etsyid" />

    <EditText

        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_width="60dp"
        android:text=""
        android:hint="Day"
        android:ems="10"
        android:layout_marginStart="23dp"
        android:id="@+id/etsdid"
        android:layout_alignBaseline="@+id/etsmid"
        android:layout_alignBottom="@+id/etsmid"
        android:layout_toEndOf="@+id/etsmid" />

    <TextView

        android:text="Enter Date"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:textSize="15sp"
        android:textColor="#3F51B5"
        android:textAlignment="center"
        android:layout_above="@+id/etsdid"
        android:id="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bSubmit" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/bSubmit"
        android:background="#3F51B5"
        android:textColor="#FFF"
        android:layout_below="@+id/etStMin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Month"
        android:ems="10"
        android:layout_marginTop="108dp"
        android:id="@+id/etsmid"
        android:layout_marginStart="29dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/etStHour" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:text=""
        android:textColor="#3F51B5"
        android:id="@+id/tit"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etStHour"
        android:hint="SHour"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/etDuration"
        android:hint="Duration"
        android:layout_above="@+id/bSubmit"
        android:layout_alignEnd="@+id/etsyid"
        android:layout_alignTop="@+id/etStMin"
        android:layout_toEndOf="@+id/etsdid" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etStMin"
        android:hint="SMin"
        android:layout_alignBaseline="@+id/etStHour"
        android:layout_alignBottom="@+id/etStHour"
        android:layout_alignStart="@+id/bSubmit" />


</RelativeLayout>
